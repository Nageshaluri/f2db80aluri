extends layout

block content
  h1= title
  - let juices = results
  div(claass="container-fluid")
   div(class="row m-1")
    each item,index in juices
     - let destination = `dispatch(\"/juice/update?id=${item._id}\")`
     div(class="row-sm-2",class="m-1") Item #{item.variety}(#{item.vitamin}) is #{item.price}
      button.btn( class="btn-primary ml-1", onclick= destination) Update
  script.
   function dispatch(path){
    window.location.href=path
   }
