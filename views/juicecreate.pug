extends layout

block content
  h1= title
    form(id='JuiceForm', action="/resource/juices", method="POST") 
    div.form-group 
        label.juiceAttr(for='variety') Juice variety 
        input#variety(type='text', name='variety') 
    div.form-group 
        label.juiceAttr(for='vitamin') Juice vitamin 
        input#size(type='text', name='vitamin') 
    div.form-group 
        label.juiceAttr(for='price') Juice price
        input#price(type='number', name='price') 
    input(type="submit") 
 
  script. 
    document.forms['JuiceForm'].addEventListener('submit', (event) => { 
      event.preventDefault(); 
      // TODO do something here to show user that form is being submitted 
      fetch(event.target.action, { 
        method: 'POST', 
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Save succeded") 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Save failed " + error ) 
      }); 
    }); 
